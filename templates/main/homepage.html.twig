{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Starshop: your monopoly-busting option for Starship parts!
    </h1>
    <div>
        Browse through {{ numberOfStarships * 10 }} starships!

        {% if numberOfStarships > 400 %}
            <p>
                {# Do you think "shiploads" will pass the legal team? #}
                That's a shiploads of ships!
            </p>
        {% endif %}
    </div>

    <div>
        <h2>My Ship</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>{{ my_ship.name }}</td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ my_ship.class }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{ my_ship.captain|upper }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ my_ship.status }}</td>
            </tr>
        </table>
    </div>
{% endblock %}